<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.onetoone.Address" table="ADDRESS">
      <meta attribute="class-description">
         This class contains details of the location.
      </meta>
      <id name="locationId" type="string" column="LOCATION_ID">
      </id>
      <property name="longitude" column="LONGITUDE" type="string"/>
      <property name="latitude" column="LATITUDE" type="string"/>
      <property name="city" column="CITY" type="string"/>
   </class>
</hibernate-mapping>